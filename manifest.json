{
    "name": "年寄りに優しいインターネット",
    "version": "1.0",
    "description": "カタカナが分からない年寄りに優しいインターネットを実現します",
    "manifest_version": 2,
    "content_security_policy": "script-src 'self' https://apis.google.com; object-src 'self'",
    "background": {
        "scripts": [
            "api.js",
            "background.js"
        ],
        "persistent": false
    },
    "content_scripts": [
        {
            "matches": ["https://www.fukuishimbun.co.jp/*"],
            "js": ["contentScript.js"],
            "run_at": "document_idle"
        }
    ]
}
